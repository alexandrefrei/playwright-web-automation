{
  "name": "playwright-web-automation",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com-personal:alexandrefrei/playwright-web-automation.git",
  "author": "Alexandre <alexandrefrei@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.43.1",
    "@types/node": "^20.12.7",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.3.3",
    "@estruyf/github-actions-reporter": "^1.10.0"
  },
  "scripts": {
    "test": "playwright test",
    "test:run": "npx playwright test tests/ui/'",
    "test:run:single": "npx playwright test tests/ui/specs/login/login.spec.ts --project=chromium --workers=1 --headed",
    "test:run:all": "npx playwright test tests",
    "test:run:chromium": "npx playwright test tests/ui/specs/ --project=chromium --headed",
    "test:run:smoke": "npx playwright test tests/ --grep @smoke --project=chromium --headed",
    "test:run:Disable-parallelization": "npx playwright test tests/ --workers=1",
    "test:run:UI-Interactive": "npx playwright test --ui tests/ui/specs/login/login.spec.ts --project=chromium",
    "test:run:Debug": "npx playwright test tests/ui/specs/buyProducts.spec.ts --project=chromium --workers=1 --headed --debug",
    "test:run:Buy": "npx playwright test tests/ui/specs/buyProducts.spec.ts --project=chromium --workers=1 --headed",
    "test:run:UI-Interactive-All": "npx playwright test --ui tests/ui/specs/ --project=chromium",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "clean": "rm -rf allure-report allure-results allure-history"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "prettier": "^3.2.5"
  }
}
